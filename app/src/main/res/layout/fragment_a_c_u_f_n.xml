<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/aadhar_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mycard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="10dp"
                android:elevation="20dp"
                android:padding="10dp"
                app:cardCornerRadius="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_orangle" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_green" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/ic_path_94" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="105dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/small_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/Aadhar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/pan_card"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/gotham_medium"
                                android:text="Aadhar Number"
                                android:textColor="@color/darkslategray"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/aadhar_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/stroke_bg"
                                android:drawableEnd="@drawable/ic_layer_2"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/gotham_book_regular"
                                android:hint="Enter Aadhar Number"
                                android:inputType="number"
                                android:maxLength="12"
                                android:paddingVertical="7dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:singleLine="true"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="Date of Birth"
                                android:textColor="@color/darkslategray"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/aadhar_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/stroke_bg"
                                android:baselineAligned="false"
                                android:drawableEnd="@drawable/ic_layer_2"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/gotham_book_regular"
                                android:hint="DD/MM/YY"
                                android:paddingVertical="7dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:singleLine="true"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_path_95" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#FF4D00" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="आधार"
                            android:textColor="#FF4D00"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_medium"
                            android:text=" - आम आदमी का अधिकार"
                            android:textColor="@color/darkslategray"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycard"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gotham_medium"
                android:text="First Name"
                android:textColor="@color/darkslategray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/first_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:inputType="textCapWords"
                android:backgroundTint="@color/darkslategray"
                android:fontFamily="@font/gotham_book_regular"
                android:hint="Enter First Name  Here"
                android:maxLength="50"
                android:singleLine="true"
                android:textSize="14sp" />
            <LinearLayout
                android:id="@+id/middle_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_input"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_input"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="Middle Name"
                    android:textColor="@color/darkslategray"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_book_regular"
                    android:text="(optional)"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/darkslategray"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/middle_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/middle_linear"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:inputType="textCapWords"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/darkslategray"
                android:fontFamily="@font/gotham_book_regular"
                android:hint="Enter Middle Name  Here"
                android:singleLine="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/middle_input"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gotham_medium"
                android:text="Last Name"
                android:textColor="@color/darkslategray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/last_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last"
                android:layout_marginStart="10dp"
                android:inputType="textCapWords"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/darkslategray"
                android:fontFamily="@font/gotham_book_regular"
                android:hint="Enter Last Name Here"
                android:maxLength="50"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/last_input"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:src="@drawable/nict_bills_services_logo" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-20dp"
                android:fontFamily="@font/gotham_medium"
                android:text="Aadhar Card"
                android:textColor="@color/lightseagreen" />

            <TextView
                android:id="@+id/proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/version"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/proceed_bg"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_horizontal"
                android:paddingVertical="10dp"
                android:text="Update &amp; Proceed"
                android:textColor="@color/white" />


        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
