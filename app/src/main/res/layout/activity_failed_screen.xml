<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FailedScreen">

    <TextView
        android:id="@+id/sorry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/gotham_bold"
        android:text="Sorry!"
        android:textColor="@color/lightseagreen"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/payment_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sorry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gotham_bold"
        android:text="Your payment failed"
        android:textColor="@color/darkslategray"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/failed"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/payment_failed"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_group_316" />

    <ImageView
        android:id="@+id/nict"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/failed"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nict_bills_services_logo" />

    <TextView
        android:id="@+id/go_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nict"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/proceed_bg"
        android:fontFamily="@font/gotham_medium"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:text="Go Back"
        android:textColor="@color/white" />

</RelativeLayout>
