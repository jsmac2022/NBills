<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_linear_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.notification.NotificationDisplayActivity"
    >



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/notification_topics_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="65dp"
                        app:srcCompat="@drawable/nict_bills_services_logo"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="#525C6F77"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NICT Bills"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"/>

                        <View
                            android:layout_width="100dp"
                            android:layout_height="1dp"
                            android:background="#525C6F77"/>

                        <TextView
                            android:id="@+id/tv_Topic_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:textColor="#3F51B5"
                            android:paddingLeft="10dp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#525C6F77"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_topic_body_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2196F3"
                        android:text="messages" />

                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/nict_electricity_bill_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/nict_bills_services_logo"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="#525C6F77"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NICT Bills"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:paddingTop="3dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bill Month"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textColor="#2196F3"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/tv_bill_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="December 2021"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textColor="#3F51B5"
                        android:layout_marginTop="-3dp"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#525C6F77"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_body_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F44336"
                    android:text="Pay your bill for month December 2021" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_screen1"
                    android:text="Service Name" />

                <TextView
                    android:id="@+id/tv_service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N89822654556" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_screen1"
                    android:text="Name" />

                <TextView
                    android:id="@+id/tv_cosumer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VINOD SINGH" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_screen1"
                    android:text="Address" />

                <TextView
                    android:id="@+id/tv_cosumer_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indore, Madhya Pradesh" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_screen1"
                    android:text="Circle" />

                <TextView
                    android:id="@+id/tv_circle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indore, City" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_screen1"
                    android:text="Amount" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:text="10000/-" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_screen1"
                    android:text="With Surcharge" />

                <TextView
                    android:id="@+id/tv_with_surcharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="125000/-"
                    android:textColor="#F44336"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_screen1"
                    android:text="Due Date" />

                <TextView
                    android:id="@+id/tv_due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15-Dec-2021"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pay_now_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pay now"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>



</LinearLayout>