<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dot_dark_screen4">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/paniwala_water_type_IMG"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:src="@drawable/paniwala_logo"/>

            <TextView
                android:id="@+id/water_type_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="water type name"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000"/>



            <Button
                android:id="@+id/continue_water_type_BTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="@string/continue_btn"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>