<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:textSize="16dp"
                    android:textColor="#000"/>

                <ImageView
                    android:id="@+id/delete_beneficiary_IMG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/delete_24"
                    android:layout_gravity="center"/>


            </LinearLayout>



             <TextView
                 android:id="@+id/ref_id_TV"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="ref_id"
                 android:layout_marginLeft="10dp"
                 android:textSize="14dp"
                 android:textColor="#DF000000"/>


                <LinearLayout
                    android:id="@+id/dose_appointment_download_Linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/invoice_download" />


                        <TextView
                            android:id="@+id/dose_appointment_certificate_TV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dose_certificate_download_Linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/invoice_download" />


                        <TextView
                            android:id="@+id/dose_certificate_TV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dose_color_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#D9F4DA"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/dose_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="#E80303"
                            android:text="dose"/>

                            <TextView
                                android:id="@+id/vaccine_name_TV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:textColor="#008F06"
                                android:text="Vaccine"/>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/appointment_schedule_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="appointment"
                        android:textColor="#E80303"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        />


                    <TextView
                        android:id="@+id/appointment_schedule_hospital_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="hospital name"
                        android:textColor="#E80303"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="2dp"
                        />

                    <TextView
                        android:id="@+id/appointment_schedule_city_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="hospital name"
                        android:textColor="#E80303"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        />


                </LinearLayout>


                <TextView
                    android:id="@+id/schedule_now_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:textSize="14dp"
                    android:layout_margin="15dp"
                    android:text="Schedule Now"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/reSchedule_now_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:textSize="14dp"
                    android:layout_margin="15dp"
                    android:text="Reschedule"/>

                    <TextView
                        android:id="@+id/cancel_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2196F3"
                        android:textSize="14dp"
                        android:layout_margin="15dp"
                        android:text="Cancel"/>

                </LinearLayout>

            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>

</LinearLayout>